@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sınav sekmesi değiştirme
            const examTabs = document.querySelectorAll('.exam-tab');
            const examContents = document.querySelectorAll('.exam-content');
            
            examTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Aktif sekmeyi değiştir
                    examTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    // İlgili içeriği göster
                    const examType = this.getAttribute('data-exam');
                    examContents.forEach(content => {
                        content.classList.remove('active');
                        content.style.display = 'none';
                    });
                    document.getElementById(`${examType}-content`).classList.add('active');
                    document.getElementById(`${examType}-content`).style.display = 'block';
                });
            });
            
            // Sayfa yüklendiğinde LGS sekmesi aktif olsun
            document.querySelector('.exam-tab[data-exam="lgs"]').click();
        });
    </script>
}