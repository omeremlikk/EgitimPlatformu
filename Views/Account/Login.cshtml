@model EgitimPlatformu.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="login-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="login-card">
                    <div class="row g-0">
                        <!-- Sol taraf - Görsel ve Motivasyon Metni -->
                        <div class="col-md-5 login-banner">
                            <div class="login-banner-content">
                                <div class="login-logo">
                                    <i class="fas fa-square-root-alt"></i>
                                    <span>Gurbet Catın</span>
                                </div>
                                <h2>Matematik Yolculuğuna Hazır mısın?</h2>
                                <p>Hesabına giriş yaparak kişiselleştirilmiş eğitim içeriklerine ve çok daha fazlasına hemen ulaş.</p>
                                <div class="login-benefits">
                                    <div class="login-benefit-item">
                                        <i class="fas fa-check-circle"></i>
                                        <span>Kişisel çalışma programı</span>
                                    </div>
                                    <div class="login-benefit-item">
                                        <i class="fas fa-check-circle"></i>
                                        <span>Özel soru çözümleri</span>
                                    </div>
                                    <div class="login-benefit-item">
                                        <i class="fas fa-check-circle"></i>
                                        <span>İlerleme takibi</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Sağ taraf - Giriş Formu -->
                        <div class="col-md-7 login-form-container">
                            <div class="login-form-content">
                                <h2 class="text-center mb-4">Giriş Yap</h2>
                                
                                <form class="login-form" asp-controller="Account" asp-action="Login" method="post">
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                                    }
                                    
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    
                                    <div class="mb-4">
                                        <label asp-for="Email" class="form-label">E-posta Adresiniz</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com">
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <label asp-for="Password" class="form-label">Şifreniz</label>
                                            <a href="#" class="forgot-password">Şifremi Unuttum</a>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin">
                                            <button class="btn btn-outline-secondary password-toggle" type="button">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="mb-4 form-check">
                                        <input asp-for="RememberMe" class="form-check-input">
                                        <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                                    </div>
                                    
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary btn-login">
                                            <span>Giriş Yap</span>
                                            <i class="fas fa-arrow-right"></i>
                                        </button>
                                    </div>
                                </form>
                                
                                <div class="text-center mt-4 signup-link">
                                    Henüz üye değil misiniz? <a asp-controller="Account" asp-action="Register">Hemen Kaydolun</a>
                                </div>
                                
                                <div class="login-divider">
                                    <span>veya</span>
                                </div>
                                
                                <div class="social-login">
                                    <button class="btn btn-social btn-google">
                                        <i class="fab fa-google"></i>
                                        <span>Google ile Giriş Yap</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Şifre göster/gizle fonksiyonu
            const togglePassword = document.querySelector('.password-toggle');
            const password = document.querySelector('#password');
            
            togglePassword.addEventListener('click', function() {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                
                // İkon değiştirme
                this.querySelector('i').classList.toggle('fa-eye');
                this.querySelector('i').classList.toggle('fa-eye-slash');
            });
        });
    </script>
}